<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="120dp"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginBottom="3dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image_View"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@tools:sample/avatars" />

        <LinearLayout
            android:id="@+id/rating_and_distance"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RatingBar
                android:id="@+id/product_ratingBar"
                android:layout_weight="1"
                android:layout_width="120dp"
                android:layout_height="20dp" />

            <TextView
                android:layout_weight="1"
                android:id="@+id/product_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3 Km" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/product_distance_dashed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00.00/-" />

            <TextView
                android:textAlignment="center"
                android:background="#FF9800"
                android:id="@+id/product_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="00%" />

        </LinearLayout>
        <TextView
            android:textStyle="bold"
            android:id="@+id/product_discount_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00.00/-" />
        <TextView
            android:textStyle="bold"
            android:id="@+id/product_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Service\n Title Product " />

    </LinearLayout>
</androidx.cardview.widget.CardView>